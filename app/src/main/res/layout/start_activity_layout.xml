<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/container"/>

    <LinearLayout
        android:gravity="bottom"
        android:padding="8dp"
        android:background="#74443b"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/animals_btn"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_android_24"/>
        <ImageView
            android:id="@+id/work_btn"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_work_24"/>
        <ImageView
            android:id="@+id/perederzhka_btn"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_personal_injury_24"/>
<!--        <ImageView-->
<!--            android:id="@+id/maps"-->
<!--        android:layout_gravity="center_vertical"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:src="@drawable/baseline_map_24"/>-->

        <ImageView
            android:id="@+id/person_btn"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_person_24"/>
    </LinearLayout>

</RelativeLayout>


