<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e69105">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/barrow"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="РАБОТА"/>
            </LinearLayout>
        </FrameLayout>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab_view"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя"/>
            <EditText
                android:maxLength="255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_uesr"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Фамилия"/>
            <EditText
                android:maxLength="255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/surname_uesr"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Телефон"/>
            <EditText
                android:maxLength="255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_user"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Животное"/>
            <EditText
                android:maxLength="255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/animals_type"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Порода"/>
            <EditText
                android:layout_marginTop="2dp"
                android:maxLength="255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/poroda_anim"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Количество дней"/>
            <EditText
                android:maxLength="255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num_day"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Адрес"/>
            <EditText
                android:maxLength="255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_addres"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/price_line">
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Цена"/>
                <EditText
                    android:maxLength="255"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_photo"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_for_log"
                android:text="Загрузить фотографию"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_zapis"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_for_log"
                android:text="Добавить запись"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
